/**index.wxss**/

.box {
  overflow: hidden;
  border: 1px solid #e6e6e6;
  margin: 0 auto;
  width: 94%;
  margin-top: 30rpx;
}

.content {
  /* width: 600rpx; */
  width: 100%;
  height: 62rpx;
  overflow: hidden;
  background-color: #ededed;
  line-height: 62rpx;
  border-top: 1px solid #e6e6e6;
}

.contentInput {
  width: 98%;
  height: 85rpx;
  overflow: hidden;
  /* margin-left: 20rpx; */
}

input {
  display: block;
  height: 55rpx;
  text-overflow: clip;
  overflow: hidden;
  white-space: nowrap;
  font-family: UICTFontTextStyleBody;
  min-height: 1.4rem;
  border: 1px solid #e6e6e6;
  font-size: 32rpx;
  padding-left: 10rpx;
  margin-top: 10rpx;
  margin-left: 16rpx;
  color: #999;
}

.areaBox {
  overflow: hidden;
  /* padding-left: 20rpx; *//* margin-top: 30rpx; */
  font-size: 32rpx;
}

.title {
  width: 100%;
  overflow: hidden;
}

view {
  font-size: 32rpx;
}

.title image {
  width: 200rpx;
  height: 200rpx;
  display: inline-block;
  overflow: hidden;
  padding-left: 36%;
  padding-top: 10rpx;
  margin: 0 auto;
}

title .titleName {
  /* font-size: 20rpx; */
  padding-left: 40%;
}

text {
  font-size: 32rpx;
  /* height: 32rpx; *//* line-height: 32rpx; */
}

image {
  width: 50rpx;
  height: 50rpx;
  display: inline-block;
  /* overflow: hidden; *//* padding-left: 40%; *//* padding-top: 10rpx; */
  padding-top: 4rpx;
}

textarea {
  width: 100%;
  height: 300rpx;
  display: block;
  position: relative;
  /* border: 1px solid #e6e6e6; */
  font-size: 32rpx;
  margin: 10rpx;
  color: #999;
}

input {
  display: block;
  height: 2rem;
  text-overflow: clip;
  overflow: hidden;
  white-space: nowrap;
  font-family: UICTFontTextStyleBody;
  min-height: 1.4rem;
  border-bottom: 1px solid #e6e6e6;
}

.pic image {
  width: 100rpx;
  height: 100rpx;
 
}

button[type="primary"] {
  color: #fff;
  background-color: #17b990;
  height: 80rpx;
  line-height: 80rpx;
}

radio .wx-radio-input {
  -webkit-appearance: none;
  margin-right: 5px;
  outline: 0;
  border: 1px solid #d1d1d1;
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  position: relative;
}

.color_font {
  color: #17b990;
}

.addPic {
  float: left;
  margin-left: 14rpx;
  padding-top: 8rpx;
  margin-right:14rpx;
}

.img-item {
  float: left;
  margin-right: 14rpx;
  padding-top: 10rpx;
   
}
